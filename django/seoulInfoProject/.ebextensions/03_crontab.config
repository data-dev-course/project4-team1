files:
    /etc/cron.d/news_cron:
        mode: "000644"
        owner: root
        group: root
        content: |
            1,16,31,46 * * * * root . /etc/profile.d/sh.local && /var/app/venv/staging-LQM1lest/bin/python -m cron.cron >> /var/app/current/cron/crontab.log 2>&1
            2 0 * * * root source /var/app/current/cron/rm_news.sh >> /var/app/current/cron/crontab.log 2>&1
            3,17,32,47 * * * * root cat /var/app/current/cron/crontab.log >> /var/log/crontab.log 2>&1

    /opt/elasticbeanstalk/tasks/taillogs.d/crontab.conf:
        mode: "000755"
        owner: root
        group: root
        content: |
            /var/log/crontab.log

commands:
  rm_old_cron:
    command: "rm -fr /etc/cron.d/*.bak"
    ignoreErrors: trues

container_commands:
  04_pwd:
    command: "ls -al"
  05_init_news_data:
    command: "source /etc/profile.d/sh.local && source /var/app/venv/*/bin/activate && python -m cron.cron"
    leader_only: true